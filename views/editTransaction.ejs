<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <%- include('header') %>
    <form action="/editTransaction/<%= transaction.id %>" method="POST">
        <div>
            <label for="product_id">Choose Subcsription</label><br>
                <select id="product_id" name="product_id">
                    <option value="">Choose</option>
                    <% product.forEach(product => { %>
                        <option value="<%= product.id %>" <% if (product.id == transaction.product_id) { %> selected <%}%> ><%= product.name %></option>
                    <% }) %>
                  
                </select>
        </div>
        <div>
            <label for="grind">Grind Size</label><br>
                <select id="grind" name="grind">
                    <option value="">Choose</option>
                    <% allTransaction.forEach(allTransaction => { %>
                        <option value="<%= allTransaction.grind %>" <% if (allTransaction.grind == transaction.grind) { %> selected <%}%> ><%= allTransaction.grind %></option>
                    <% }) %>
                </select>
        </div>
        
        <div>
            <label for="quantity">Subcsription Periode</label><br>
            <input type="integer" name="quantity" id="quantity" value="<%= transaction.quantity%>">

        </div>
        </div>

        <button type="submit">Simpan</button>
    </form>
    <%- include('footer') %>

</body>
</html>